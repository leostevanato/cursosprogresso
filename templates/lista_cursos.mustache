{{!
    @template mod_cursosprogresso/lista_cursos

    Lista de cursos indicando se completados ou n√£o.

    Classes required for JS:
    * none

    Data attributes required for JS:
    * none

    Context variables required for this template:
    * none

    Example context (json):
    {
        "cursos": [
            {
                "courseid": 3,
                "fullname": "Curso teste",
                "completed": true,
                "status": "nao_inscrito"
            },
            {
                "courseid": 7,
                "fullname": "Curso teste 2",
                "completed": false,
                "status": "incompleto"
            },
            {
                "courseid": 12,
                "fullname": "Curso teste 3",
                "completed": true,
                "status": "completo"
            }
        ],
        "courseListHtmlId": "lista-cursos",
        "courseListHtmlClass": "item-curso",
        "showdefault": true
    }
}}
{{#showdefault}}
<ul class="fa-ul mt-2 text-start text-left" style="list-style: none">
    {{#cursos}}
    <li class="" data-cursoid="{{courseid}}">
        <span class="fa-li">
            {{#completed}}
                {{! <i class="fa-solid fa-circle-check ml-2" style="color: #579368;"></i> }}
                <i class="icon fa fa-check-circle mr-2" style="color: #579368;"></i>
            {{/completed}}

            {{^completed}}
                {{! <i class="fa-solid fa-circle-xmark ml-2" style="color: #fb1818;"></i> }}
                <i class="icon fa fa-times-circle mr-2" style="color: #fb1818;"></i>
            {{/completed}}
        </span>
        {{fullname}}
        {{^completed}}
            ({{status}})
        {{/completed}}
    </li>
    {{/cursos}}
</ul>
{{/showdefault}}