{{!
    @template mod_cursosprogresso/barra_progresso

    Barra de progresso de completados.

    Classes required for JS:
    * none

    Data attributes required for JS:
    * none

    Context variables required for this template:
    * none

    Example context (json):
    {
        "html_id": "barra-progresso"
        "width": "500px",
        "percentage": 38
    }
}}
<div id="{{html_id}}" class="progressbar_container mb-3 ml-3" style="width: {{width}}">
    <div class="progress rounded">
        <div id="{{html_id}}_bar" class="progress-bar progress-bar-striped" role="progressbar" aria-value="0" aria-valuemin="0" aria-valuemax="100" style="width: {{percentage}}%"></div>
    </div>
    <div class="d-flex">
        <div style="flex: 1 1 0; min-width: 0;">
            <div id="{{html_id}}_status" class="text-truncate">&nbsp;</div>
        </div>
        <div class="text-right pl-3" style="flex: 0 0 content">
            <span id="{{html_id}}_percentage" class="d-inline-block" style="width: 4em"></span>
        </div>
    </div>
</div>
<script>
var pb_pct = document.getElementById("{{html_id}}_percentage");
var pct = parseFloat({{percentage}});

if (pct < 100) {
    pct = pct.toFixed(1);
    let pct_arr = pct.split(".");

    pct = pct_arr[1] > 0 ? pct : pct_arr[0];
}

pb_pct.textContent = pct + "%";
</script>